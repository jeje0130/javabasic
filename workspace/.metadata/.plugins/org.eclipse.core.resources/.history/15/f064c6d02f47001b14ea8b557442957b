package controller;

import java.util.ArrayList;
import java.util.List;
import java.util.Map;

import util.JDBCUtil;
import util.ScanUtil;

public class Test {

	public static void main(String[] args) {
		JDBCUtil jdbc = JDBCUtil.getInstance();
		String sql = "select RES_NAME, COUSINE, ADD1, DISTANCE, OPEN_TIME, CLOSE_TIME "
				+ "from RESTAURANTS where COUSINE = ? "
				+ "and DISTANCE = ?";
		List<Object> p = new ArrayList<>();
		System.out.print("검색할 스타일 >");
		String str = ScanUtil.nextLine();
		p.add(str);
//		System.out.print("검색할 거리 >");
//		int d = ScanUtil.nextInt();
//		p.add(d);
		Map<String, Object> result =jdbc.SelectOne(sql,p);
		System.out.print("매장명 : " + result.get("RES_NAME"));
		System.out.print(" / " + result.get("COUSINE"));
		System.out.print(" / " + result.get("ADD1"));
		System.out.print(" / 거리 " + result.get("DISTANCE") + "m");
		System.out.print(" (" + result.get("OPEN_TIME"));
		System.out.print("~" + result.get("CLOSE_TIME") + ")");
		
	}

}

package i_collection;

import java.util.ArrayList;
import java.util.HashMap;

import e_oop.ScanUtil;

public class Board {

	public static void main(String[] args) {
		/*
		 * ArrayList와 HashMap을 사용해 게시판 테이블을 만들고,
		 * 조회, 등록, 수정, 삭제가 가능한 게시판을 만들어주세요.
		 * 
		 * 번호(PK), 제목, 내용, 작성자, 작성일
		 * 
		 * ------------------------------------
		 * 번호 	제목			작성자		작성일
		 * ------------------------------------
		 * 4	안녕하세요		홍길동		12/15
		 * 3	안녕하세요		홍길동		12/15
		 * 2	안녕하세요		홍길동		12/15
		 * 1	안녕하세요		홍길동		12/15
		 * ------------------------------------
		 * 1. 조회	2.등록	3.종료
		 */

		
		 void start() {
	         int input = 0;
	         while (true) {
	      
	      System.out.println("---------------------------------------");
	      System.out.println("1. 조회       2. 등록       3.종료");
	   

	      input = ScanUtil.nextint();

	      switch (input) {
	      case 1:
	         Inquiry();
	         System.out.println();
	         break;

	      case 2:
	         Register();
	         System.out.println();
	         break;

	      case 3:
	         Exit();
	         System.out.println();
	         System.exit(0);
	         break;
	      }

		
		HashMap<String, Object> map = new HashMap<>();
		ArrayList<HashMap<String, Object>> board = new ArrayList<>();
		
		map.put("pk","번호");
		map.put("title","제목");
		map.put("writer","작성자");
		map.put("date","작성일");
		
		board.add(map);
		
		map = new HashMap<>();
		map.put("pk", 4);
		map.put("title", "안녕하세요");
		map.put("writer", "홍길동");
		map.put("date", "12/15");
		
		board.add(map);
		
		map = new HashMap<>();
		map.put("pk", 3);
		map.put("title", "반갑습니다");
		map.put("writer", "윤지혜");
		map.put("date", "12/15");
		
		board.add(map);
		
		map = new HashMap<>();
		map.put("pk", 2);
		map.put("title", "처음뵙겠습니다");
		map.put("writer", "죠르디");
		map.put("date", "12/14");
		
		board.add(map);
		
		map = new HashMap<>();
		map.put("pk", 1);
		map.put("title", "처음뵙겠습니다");
		map.put("writer", "라이언");
		map.put("date", "12/13");
		
		board.add(map);
		
		
		 //2.등록
	      void Register() {
	         
	         int input = 0;
	         Inquiry: while (true) {
	            System.out.println("1.네 \t2.아니오");
	         
	      }
	         
	         
	         System.out.println("-------------------------------------");
	            }
	      
	      
	      
	      //3.종료
	      void Exit() {
	               
	             
	         System.out.println("-------------------------------------");

		
		
		
		
	      
	}

}













































